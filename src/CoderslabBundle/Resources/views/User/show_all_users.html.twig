{% extends "CoderslabBundle:User:base.html.twig" %}

{#{% use "CoderslabBundle:User:table.html.twig" %}#}

{% block title %}All contacts{% endblock %}

{% block top %}<h1>All contacts: </h1>
<p><a href="{{ path('newUser') }}">Add new contact</a></p>
{% endblock %}

{% block content %}
    <font color="red"><b>{{ deleteConfirmation }}</b></font>
    {% embed "CoderslabBundle:User:table.html.twig" %}
        {% block tableRows %}
            {% set i = 0 %}
            {% for user in allUsers %}
                {% set i = i + 1 %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ user.id }}</td>
                    <td><a href="{{ path('showUserById', {'id': user.id}) }}">{{ user.name }}</a></td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.description }}</td>
                    <td>photo</td>
                    <td><a href="{{ path('modifyUser', {'id': user.id}) }}">edit</a>
                        <a href="{{ path('deleteUser', {'id': user.id}) }}">delete</a></td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block footer %}{% endblock %}